@model NetECommerce.Entity.Entity.Product
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Update</h1>

<div class="card mt-2 mb-4">
    <div class="card-header">
        <h3>Update Product</h3>
    </div>
    <div class="card-body">
        <form asp-action="Update" asp-controller="Product" method="post">
            <div class="mb-2">

                <label>Category Name</label>
                <input type="text" class="form-control" asp-for="ProductName" />

            </div>

            <div class="mb-2">
                <label>Unit Price</label>
                <input type="text" class="form-control" asp-for="UnitPrice" />
            </div>

            <div class="mb-2">
                <label>UnitsInStock</label>
                <input type="text" class="form-control" asp-for="UnitsInStock" />
            </div>

            <div class="mb-2">
                <label>Description</label>
                <input type="text" class="form-control" asp-for="Description" />
            </div>

            <div class="mb-2">
                <label>Kategori</label>
                <select asp-items="@ViewBag.Categories" asp-for="CategoryId" class="form-control custom-select">
                    <option selected="" disable>Please Select Category</option>
                </select>
            </div>

            <div class="mb-2">
                <label>ImageUrl</label>
                <input type="text" class="form-control" asp-for="ImagePath" />
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>

